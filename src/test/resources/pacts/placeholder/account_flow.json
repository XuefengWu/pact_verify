{
  "provider": {
    "name": "login Service"
  },
  "consumer": {
    "name": "test_consumer"
  },
  "repeat": 1,
  "cookies": "user=1",
  "interactions": [
    {
      "description": "login",
      "request": {
        "method": "post",
        "path": "/api/login",
        "body": {
          "userId": "",
          "username": "admin",
          "password": "password",
          "loginToken": ""
        }
      },
      "response": {
        "status": 200,
        "body": {
          "loginToken": "xxxyyy",
          "username": "admin"
        }
      },
      "setParameters":{
        "login.token": "$body.token"
      }
    },
    {
      "description": "create with validate user",
      "request": {
        "method": "post",
        "path": "/api/users",
        "body": {
          "username": "username_xx",
          "email": "username_xx@gg.co",
          "password": "password_YY_001"
        }
      },
      "response": {
        "status": 200
      }
    },
    {
      "description": "get user company roles",
      "request": {
        "method": "get",
        "path": "/api/users/53e2f338-dbe0-11e3-b618-1a514932ac01/company_role"
      },
      "response": {
        "status": 200
      }
    },
    {
      "description": "update user company roles",
      "request": {
        "method": "post",
        "path": "/api/users/53e2f338-dbe0-11e3-b618-1a514932ac01/company_role",
        "body": {
          "companyId": "c039a411-dbe0-11e3-b618-1a514932ac01",
          "roleIds": ["201e0001-0001-11e3-b618-1a514931ac01"]
        }
      },
      "response": {
        "status": 200,
        "body": {"user": "wu"}
      }
    },
    {
      "description": "list all resources",
      "request": {
        "method": "get",
        "path": "/api/config/resources"
      },
      "response": {
        "status": 200
      }
    },
    {
      "description": "list all resources for a role",
      "request": {
        "method": "get",
        "path": "/api/config/role/201e0001-0001-11e3-b618-1a514932ac01/resources"
      },
      "response": {
        "status": 200
      }
    },
    {
      "description": "change password",
      "request": {
        "method": "post",
        "path": "/api/users/53e2f338-dbe0-11e3-b618-1a514932ac01/password",
        "body": {
          "oldPassword": "password",
          "newPassword": "password"
        }
      },
      "response": {
        "status": 200,
        "body": true
      }
    }
  ]
}
