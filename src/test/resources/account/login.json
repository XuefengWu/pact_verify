      "description": "create with validate user",
      "request": {
        "method": "post",
        "path": "/api/users",
        "body": {
          "username": "username_xx",
          "email": "username_xx@gg.co",
          "password": "password_YY_001"
        }
      },
      "response": {
        "status": 200
      }
    },
    {
      "description": "get user company roles",
